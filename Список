// Создаем класс узла списка
class Узел {
    int значение;
    Узел следующий;

    // Конструктор для инициализации узла
    public Узел(int значение) {
        this.значение = значение;
        this.следующий = null;
    }
}

// Создаем класс Список
class Список {
    Узел голова;

    // Конструктор для инициализации списка
    public Список() {
        this.голова = null;
    }

    // Метод для добавления элемента в список
    public void добавить(int значение) {
        Узел новыйУзел = new Узел(значение);
        if (голова == null) {
            голова = новыйУзел;
        } else {
            Узел текущий = голова;
            while (текущий.следующий != null) {
                текущий = текущий.следующий;
            }
            текущий.следующий = новыйУзел;
        }
    }

    // Другие методы списка (например, удаление элемента, поиск и т.д.) могут быть добавлены по аналогии
}

// Пример использования
public class Main {
    public static void main(String[] args) {
        Список список = new Список();
        список.добавить(1);
        список.добавить(2);
        список.добавить(3);
        // Дополнительные операции с вашим списком
    }
}
